<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:id="createNewBookPane" maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity" prefHeight="528.0" prefWidth="334.0"
            xmlns="http://javafx.com/javafx/10.0.1" fx:controller="CreateNewBookController">
    <top>
        <VBox alignment="CENTER" prefHeight="53.0" prefWidth="400.0" BorderPane.alignment="CENTER">
            <children>
                <Label prefHeight="53.0" prefWidth="180.0" text="Create new book">
                    <font>
                        <Font size="22.0"/>
                    </font>
                </Label>
            </children>
        </VBox>
    </top>
    <bottom>
        <VBox alignment="CENTER" prefHeight="54.0" prefWidth="400.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                    <children>
                        <Button fx:id="createBookButton" mnemonicParsing="false" onAction="#storeAndGoToLibrarianPage"
                                text="Create"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </bottom>
    <left>
        <Pane prefHeight="300.0" prefWidth="548.0" BorderPane.alignment="CENTER">
            <children>
                <Label layoutX="119.0" layoutY="12.0" text="Title:"/>
                <TextField fx:id="title" layoutX="160.0" layoutY="7.0" prefHeight="25.0" prefWidth="110.0"/>
                <Label layoutX="118.0" layoutY="46.0" text="Year:"/>
                <TextField fx:id="year" layoutX="160.0" layoutY="41.0" prefHeight="25.0" prefWidth="110.0"/>
                <Label layoutX="105.0" layoutY="80.0" text="Author:"/>
                <TextField fx:id="author" layoutX="160.0" layoutY="75.0" prefHeight="25.0" prefWidth="110.0"/>
                <Label layoutX="89.0" layoutY="112.0" text="Publisher:"/>
                <TextField fx:id="publisher" layoutX="160.0" layoutY="107.0" prefHeight="25.0" prefWidth="110.0"/>
                <Label layoutX="109.0" layoutY="146.0" text="Genre:"/>
                <TextField fx:id="genre" layoutX="160.0" layoutY="141.0" prefHeight="25.0" prefWidth="110.0"/>
                <Label layoutX="117.0" layoutY="181.0" text="ISBN:"/>
                <TextField fx:id="isbn" layoutX="161.0" layoutY="176.0" prefHeight="25.0" prefWidth="110.0"/>
                <Label layoutX="62.0" layoutY="218.0" text="Path of Image:"/>
                <TextField fx:id="imagepath" layoutX="161.0" layoutY="213.0" prefHeight="25.0" prefWidth="110.0"/>
                <Label layoutX="86.0" layoutY="257.0" text="Language:"/>
                <TextField fx:id="language" layoutX="160.0" layoutY="252.0" prefHeight="25.0" prefWidth="110.0"/>
                <Label layoutX="88.0" layoutY="375.0" text="Duration:"/>
                <TextField fx:id="durationTextView" layoutX="159.0" layoutY="370.0" prefHeight="25.0"
                           prefWidth="110.0"/>
                <Label layoutX="32.0" layoutY="338.0" prefHeight="17.0" prefWidth="126.0" text="Number of Copies:"/>
                <TextField fx:id="numOfCopiesTextView" layoutX="158.0" layoutY="333.0" prefHeight="25.0"
                           prefWidth="110.0"/>
            </children>
        </Pane>
    </left>
</BorderPane>
